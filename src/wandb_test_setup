epochs = 10
offset = random.random() / 5
for epoch in range(2, epochs):
    acc = 1 - 2**-epoch - random.random() / epoch - offset
    loss = 2**-epoch + random.random() / epoch + offset

    # Log metrics to wandb. #!!!!Skal tilpasses til resten af vores kode!!!!
    run.log({
        "acc": acc,
        #"epoch": epoch,
        #"train_loss": train_loss,
        #"val_loss": val_loss,
        #"accuracy": train_acc,
        #"val_acc": val_acc
        "loss": loss
    })

